{
    "name": "YOLO-dev",
    "dockerFile": "../Dockerfile",
    "context": "..",
    "runArgs": [
        "--gpus", "all", // Enable GPU support
        "--shm-size", "2g" // Increase shared memory
    ],
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Set *default* container specific settings.json values on container create.
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
                "terminal.integrated.shell.linux": "/bin/bash",
                "terminal.integrated.defaultProfile.linux": "bash"
			},


			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance"
			]
		}
	},
    "mounts": [
        "source=${localWorkspaceFolder},target=/home/userCoE/workdev,type=bind,consistency=cached"
        // "source=/work3,target=/work3,type=bind,consistency=cached"
    ],
    "remoteUser": "userCoE",
    "workspaceFolder": "/home/userCoE/workdev",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": "..",
        "build": { "args": { "GROUP_ID": "1000", "USER_ID": "1000" } }
    }
}
